\definecolor{titleColor}{RGB}{0,0,0}

\newtcolorbox{theoremBox}[1]{colback=red!5!white,colframe=red!75!black,fonttitle=\bfseries,title=#1}
\newtcolorbox{definitionBox}[1]{colback=blue!5!white,colframe=blue!75!white,fonttitle=\bfseries,title=#1}

\newcommand{\nDefinition}[2]{\begin{definitionBox}{\bf{#1}}#2\end{definitionBox} }}
\newcommand{\nTheorem}[2]{\begin{theoremBox}{\bf{#1}}#2\end{definitionBox} }}

\titleformat{\section}
  {\centering\Large\bfseries\color{titleColor}} % format
  {}% label
  {0pt} % sep
  {\Huge}  
\newcommand{\Mod}[1]{\ (\mathrm{mod}\ #1)}

